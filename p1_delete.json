			"name": "1. Create URL - Auto Generated Code",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"Response has short code\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.shortCode).to.exist;",
							"    pm.expect(jsonData.shortCode).to.have.lengthOf(7);",
							"});",
							"",
							"pm.test(\"Response has short URL\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.shortUrl).to.include('http://localhost:8080/');",
							"});",
							"",
							"// Save short code for later tests",
							"var jsonData = pm.response.json();",
							"pm.collectionVariables.set(\"shortCode\", jsonData.shortCode);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"originalUrl\": \"https://www.google.com\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/shorten",
					"host": [
